<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/prefs_ui">

        <SwitchPreferenceCompat
            app:key="@string/prefs_key_ui_night_mode"
            app:title="@string/prefs_ui_night_mode"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/filter">

        <EditTextPreference
            app:key="@string/prefs_key_filter_min_cache_size"
            app:title="@string/prefs_title_filter_min_cache_size" />

        <SwitchPreferenceCompat
            app:key="@string/prefs_key_filter_hide_disabled_apps"
            app:title="@string/prefs_title_filter_hide_disabled_apps" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/btn_add_extra_search_text">

        <EditTextPreference
            app:key="@string/prefs_key_clear_cache"
            app:title="@string/clear_cache_btn_text" />

        <EditTextPreference
            app:key="@string/prefs_key_storage"
            app:title="@string/storage_settings_for_app" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/prefs_show_extra_buttons">

        <SwitchPreferenceCompat
            app:key="@string/prefs_key_show_button_start_stop_service"
            app:title="@string/prefs_title_show_button_start_stop_service"
            app:summary="@string/prefs_summary_show_button_start_stop_service"/>

        <SwitchPreferenceCompat
            app:key="@string/prefs_key_show_button_close_app"
            app:title="@string/prefs_title_show_button_close_app"
            app:summary="@string/prefs_summary_show_button_close_app" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/prefs_extra_actions">

        <SwitchPreferenceCompat
            app:key="@string/prefs_key_extra_action_stop_service"
            app:title="@string/prefs_title_extra_action_stop_service"
            app:summary="@string/prefs_summary_extra_action_stop_service"/>

        <SwitchPreferenceCompat
            app:key="@string/prefs_key_extra_action_close_app"
            app:title="@string/prefs_title_extra_action_close_app"
            app:summary="@string/prefs_summary_extra_action_close_app"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/prefs_custom_lists">

        <Preference
            app:key="@string/prefs_key_custom_list_add"
            app:icon="@drawable/ic_baseline_add_circle_24"
            app:iconSpaceReserved="true"
            app:title="@string/prefs_title_custom_list_add"
            app:summary="@string/prefs_summary_custom_list_add"/>

        <Preference
            app:key="@string/prefs_key_custom_list_edit"
            app:icon="@drawable/ic_baseline_edit_24"
            app:iconSpaceReserved="true"
            app:title="@string/prefs_title_custom_list_edit"
            app:summary="@string/prefs_summary_custom_list_edit"/>

        <Preference
            app:key="@string/prefs_key_custom_list_remove"
            app:icon="@drawable/ic_baseline_remove_circle_24"
            app:iconSpaceReserved="true"
            app:title="@string/prefs_title_custom_list_remove"
            app:summary="@string/prefs_summary_custom_list_remove"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/prefs_other">

        <DropDownPreference
            app:key="@string/prefs_key_settings_scenario"
            app:title="@string/prefs_title_scenario"
            app:useSimpleSummaryProvider="true"
            app:entries="@array/settings_scenario_entries"
            app:entryValues="@array/settings_scenario_entry_values"/>

        <SeekBarPreference
            app:key="@string/prefs_key_settings_max_wait_app_timeout"
            app:title="@string/prefs_title_max_wait_app_timeout"
            app:summary="@string/prefs_summary_max_wait_app_timeout"/>

        <SeekBarPreference
            app:key="@string/prefs_key_settings_max_wait_clear_cache_btn_timeout"
            app:title="@string/prefs_title_max_wait_clear_cache_btn_timeout"
            app:summary="@string/prefs_summary_max_wait_clear_cache_btn_timeout"/>

    </PreferenceCategory>

</PreferenceScreen>